<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivSize"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_brightness_1_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whitesmoke"
        app:layout_constraintBottom_toBottomOf="@id/ivSize"
        app:layout_constraintEnd_toEndOf="@id/ivSize"
        app:layout_constraintStart_toStartOf="@id/ivSize"
        app:layout_constraintTop_toTopOf="@id/ivSize" />
</androidx.constraintlayout.widget.ConstraintLayout>